{
  "name": "@flaminc/books-backend",
  "description": "Backend for the books app",
  "version": "0.0.0-development",
  "author": "capitN.flam",
  "scripts": {
    "build": "nest build",
    "clean": "rimraf --glob dist coverage flaminc-books-backend-*.tgz",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check .",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:ci:coverage": "vitest --run --coverage",
    "type-check": "tsc --pretty --noEmit",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js -d ./src/typeorm/cli.config.ts",
    "typeorm:seed": "ts-node ./node_modules/typeorm/cli.js -d ./src/typeorm/seed.ts"
  },
  "bugs": "https://github.com/capitnflam/books-backend/issues",
  "dependencies": {
    "@flaminc/books-types": "1.1.0",
    "@nestjs/common": "10.3.4",
    "@nestjs/core": "10.3.4",
    "@nestjs/platform-express": "10.3.4",
    "@nestjs/typeorm": "10.0.2",
    "dotenv": "16.4.5",
    "express": "4.18.3",
    "helmet": "7.1.0",
    "nestjs-typeorm-paginate": "4.0.4",
    "nestjs-zod": "3.0.0",
    "pg": "8.11.3",
    "reflect-metadata": "0.2.1",
    "typeorm": "0.3.20",
    "yargs": "17.7.2",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.0",
    "@commitlint/config-conventional": "19.1.0",
    "@commitlint/types": "19.0.3",
    "@faker-js/faker": "8.4.1",
    "@flaminc/eslint-plugin": "1.2.0",
    "@nestjs/cli": "10.3.2",
    "@nestjs/testing": "10.3.4",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "12.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.0.2",
    "@semantic-release/release-notes-generator": "12.1.0",
    "@swc/core": "1.4.8",
    "@types/express": "4.17.21",
    "@types/node": "20.11.28",
    "@types/yargs": "17.0.32",
    "@vitest/coverage-v8": "1.4.0",
    "@vitest/ui": "1.4.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1",
    "semantic-release": "23.0.3",
    "semantic-release-npm-github-publish": "1.5.5",
    "syncpack": "12.3.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.2",
    "unplugin-swc": "1.4.4",
    "vitest": "1.4.0"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "homepage": "https://github.com/capitnflam/books-backend#readme",
  "license": "MIT",
  "main": "dist/main.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": "capitnflam/books-backend"
}
